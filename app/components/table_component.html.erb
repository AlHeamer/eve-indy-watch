<table class="<%= layout %> w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <% if head %>
      <%= head %>
    <% else %>
      <tr class="sticky top-0">
        <% headers.each do |header| %>
          <%= header %>
        <% end %>
      </tr>
    <% end %>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <%= body %>
    <% rows.each do |row| %>
      <%= row %>
    <% end %>
  </tbody>
</table>
