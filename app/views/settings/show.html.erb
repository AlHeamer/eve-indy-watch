<% content_for :breadcrumbs do %>
<li class="flex">
  <div class="flex items-center">
    <svg class="flex-shrink-0 w-6 h-full text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
    </svg>
    <%= link_to 'Settings', settings_path, class: 'ml-4 text-sm font-medium text-gray-500 hover:text-gray-700', 'aria-current': :page %>
  </div>
</li>
<% end %>

<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
  <div class="px-4 sm:p-6 bg-white">
    <div class="">

      <!-- Description list with inline editing -->
      <div class="divide-y divide-gray-200">
        <div class="space-y-1">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Profile
          </h3>
          <p class="max-w-2xl text-sm text-gray-500">
            This information is obtained automatically from the EVE API and updated on login.
          </p>
        </div>
        <div class="mt-6">
          <dl class="divide-y divide-gray-200">
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">
                Character
              </dt>
              <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <span class="flex-grow">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8">
                      <%= image_tag current_user.portrait_url_256, class: 'h-8 w-8 rounded-full', alt: '' %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= current_user.name %>
                      </div>
                    </div>
                  </div>
                </span>
              </dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:pt-5">
              <dt class="text-sm font-medium text-gray-500">
                Corporation
              </dt>
              <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <span class="flex-grow">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8">
                      <%= image_tag current_user.corporation_icon_url_256, class: 'h-8 w-8 rounded-full', alt: '' %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= current_user.corporation_name %>
                      </div>
                    </div>
                  </div>
                </span>
              </dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-b sm:border-gray-200">
              <dt class="text-sm font-medium text-gray-500">
                Alliance
              </dt>
              <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <% if current_user.alliance %>
                  <span class="flex-grow">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8">
                        <%= image_tag current_user.alliance_icon_url_128, class: 'h-8 w-8 rounded-full', alt: '' %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= current_user.alliance_name %>
                        </div>
                      </div>
                    </div>
                  </span>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
