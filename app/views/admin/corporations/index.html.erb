<% content_for :breadcrumbs do %>
  <%= render(BreadcrumbsComponent.new) do |c| %>
    <%= c.item href: admin_root_path do %>Administration<% end %>
    <%= c.item href: admin_corporations_path do %>Corporations<% end %>
  <% end %>
<% end %>

<%= render PageHeadingComponent.new(title: 'Corporations') %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
  <div class="py-4">
    <div class="flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="table-fixed max-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="w-4/12 px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Name
                  </th>
                  <th scope="col" class="w-4/12 px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Alliance
                  </th>
                  <th scope="col" class="w-1/12 px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Contracts
                  </th>
                  <th scope="col" class="w-1/12 px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Last Contracts Update
                  </th>
                  <th scope="col" class="w-1/12 px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Next Contracts Update
                  </th>
                  <th scope="col" class="w-1/12 px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Last Update
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @corporations.each do |corporation| %>
                  <tr>
                    <td class="px-3 py-2 whitespace-nowrap">
                      <div class="text-xs font-medium text-gray-900">
                        <%= link_to corporation.name, admin_corporation_path(corporation), class: "text-indigo-600 hover:text-indigo-900" %>
                      </div>
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap">
                      <div class="text-xs font-medium text-gray-900">
                        <%= link_to corporation.alliance.name, admin_alliance_path(corporation.alliance), class: "text-indigo-600 hover:text-indigo-900" if corporation.alliance %>
                      </div>
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap">
                      <% if corporation.contract_sync_enabled %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                          Enabled
                        </span>
                      <% else %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                          Disabled
                        </span>
                      <% end %>
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap">
                      <div class="text-xs font-medium text-gray-900">
                        <%= local_time(corporation.esi_contracts_last_modified_at, format: :db) if corporation.esi_contracts_last_modified_at %>
                      </div>
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap">
                      <div class="text-xs font-medium text-gray-900">
                        <%= local_time(corporation.esi_contracts_expires_at, format: :db) if corporation.esi_contracts_expires_at %>
                      </div>
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap">
                      <div class="text-xs font-medium text-gray-900">
                        <%= local_time corporation.esi_last_modified_at, format: :db %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= render partial: 'shared/pagination', locals: { pagy: @pagy } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
