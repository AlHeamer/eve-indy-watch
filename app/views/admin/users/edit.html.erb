<% content_for :breadcrumbs do %>
<li class="flex">
  <div class="flex items-center">
    <svg class="flex-shrink-0 w-6 h-full text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
    </svg>
    <a href="#" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Administration</a>
  </div>
</li>

<li class="flex">
  <div class="flex items-center">
    <svg class="flex-shrink-0 w-6 h-full text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
    </svg>
    <%= link_to 'Users', admin_users_path, class: 'ml-4 text-sm font-medium text-gray-500 hover:text-gray-700' %>
  </div>
</li>

<li class="flex">
  <div class="flex items-center">
    <svg class="flex-shrink-0 w-6 h-full text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
    </svg>
    <%= link_to @user.name, admin_user_path(@user), class: 'ml-4 text-sm font-medium text-gray-500 hover:text-gray-700', 'aria-current': :page %>
  </div>
</li>
<% end %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 md:px-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-nowrap">
        <div class="ml-4 mt-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <%= image_tag @user.character.portrait_url_256, class: 'h-12 w-12', alt: '' %>
            </div>
            <div class="ml-4">
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                <%= @user.character.name %>
              </h3>
            </div>
          </div>
        </div>
        <div class="ml-4 mt-4 flex-shrink-0 flex">
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
        <div class="space-y-8 divide-y divide-gray">
          <div class="space-y-8 divide-y divide-gray">
            <div class="pt-8">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                  Roles
                </h3>
                <p class="mt-1 text-sm text-gray-500">
                  What the user is allowed to do.
                </p>
              </div>
              <div class="mt-1">
                <fieldset>
                  <div class="mt-4 space-y-4">
                    <div class="relative flex items-start">
                      <div class="flex items-center h-5">
                        <%= f.check_box :roles, { multiple: true, class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' }, 'alliance.fittings.admin' %>
                      </div>
                      <div class="ml-3 text-sm">
                        <%= f.label :roles, 'Alliance Fittings Admin', class: 'font-medium text-gray-700' %>
                        <p class="text-gray-500">Full control over fittings owned by the user's alliance.</p>
                      </div>
                    </div>
                    <div class="relative flex items-start">
                      <div class="flex items-center h-5">
                        <%= f.check_box :roles, { multiple: true, class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' }, 'corporation.fittings.admin' %>
                      </div>
                      <div class="ml-3 text-sm">
                        <%= f.label :roles, 'Corporation Fittings Admin', class: 'font-medium text-gray-700' %>
                        <p class="text-gray-500">Full control over fittings owned by the user's corporation.</p>
                      </div>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>
          </div>

          <div class="pt-5">
            <div class="flex justify-end">
              <%= link_to 'Cancel', admin_user_path(@user), class: 'bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
              <%= f.submit 'Save', class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
